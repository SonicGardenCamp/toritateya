<div class="flex flex-col w-full">
  <div class="m-auto w-full max-w-md px-6 py-8">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "bg-white shadow-md rounded px-8 pt-6 pb-8" }) do |f| %>
      <div class="mb-4">
        <%= f.label :email, class: "block text-gray-700 text-sm font-bold mb-2" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
      </div>

      <div class="mb-6">
        <%= f.label :password, class: "block text-gray-700 text-sm font-bold mb-2" %>
        <%= f.password_field :password, autocomplete: "new-password", class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none focus:shadow-outline" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="mb-6">
         <%= f.label :remember_me,class: "block text-gray-700 text-sm font-bold mb-2" %>
         <%= f.check_box :remember_me, class: "block text-gray-700 text-sm font-bold mb-2" %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "Log in",class: "text-white !bg-purple-500 hover:bg-emerald-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm w-6/12 px-5 py-2.5 text-center" %>
      </div>
    <% end %>
  </div>
</div>
