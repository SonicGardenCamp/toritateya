<div class="flex flex-col w-full">
  <div class="flex justify-between">
      <p style="color:#022540" class="text-sm font-semibold leading-6 text-gray-900"><span aria-hidden="true">&larr;</span><%= link_to "貸し一覧へ", lends_path %></p>
  </div>
  <div class="w-11/12 mx-auto grid grid-cols-2 gap-2">
    <div>
      <div>
        <h1 style="color:#022540" class="text-center mb-4 text-2xl font-bold leading-none tracking-tight">貸付内容</h1>
      </div>
      <div class="w-7/12 mx-auto bg-white rounded-xl border border-black">
        <div class="grid my-2 gap-2">
              <div>
                <span class="bg-yellow-400 text-center text-xs mx-2.5 py-1 px-3.5 rounded-full">借入者</span>
                <span class="mx-1"><%= @lend.borrow_user.name %></span>
              </div>
              <div>
                <span class="bg-yellow-400 text-center text-xs mx-2.5 py-1 px-2 rounded-full">貸付金額</span>
                <span class="mx-1"><%= @lend.amount %>円</span>
              </div>
              <% if @repaymentApprovalBalance > 0 %>
              <div>
                <span class="bg-yellow-400 text-center text-xs mx-2.5 py-1 px-2 rounded-full">返済残高</span>
                <span class="mx-1"><%= @repaymentApprovalBalance %>円</span>
              </div>
              <% else %>
              <div>
                <span class="bg-green-100 text-green-800 text-xs font-medium mx-2.5 px-2.5 py-0.5 rounded dark:bg-gray-700 dark:text-green-400 border border-green-400">返済完了</span>
              </div>
              <% end %>
              <div>
                <span class="bg-yellow-400 text-center text-xs mx-2.5 py-1 px-3.5 rounded-full">コメント</span>
                <span class="mx-1"><%= @lend.comment %></span>
                </div>
              <div>
                <span class="bg-yellow-400 text-center text-xs mx-2.5 py-1 px-2 rounded-full">返却期限</span>
                <span class="mx-1"><%= l @lend.limit_on %></span>
              </div>
        </div>
      </div>
    </div>
    <div>
      <div>
      <h1 style="color:#022540" class="text-center mb-4 text-2xl font-bold leading-none tracking-tight">返済履歴</h1>
      </div>
      <% if !@lend.nil? %>
      <div class="border border-black bg-neutral-100 w-full mx-auto rounded-xl grid gap-y-3 p-7">
          <% @repayments.each do |repayment| %>
            <% if repayment.approval_status == 1 %>
            <div class="bg-white rounded-xl border">
              <div class="">返済額 <%= repayment.amount %>円</div>
              <div class="">返却日: <%= l repayment.created_at %></div>
            </div>
            <% end %>
          <% end %>
      </div>
      <% end %>
    </div>
  </div>
</div>