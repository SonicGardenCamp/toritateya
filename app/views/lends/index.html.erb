<div class="flex flex-col w-full">
    <div class="flex justify-end">
        <%= link_to "新しく取り立てる", new_lend_path, class: "text-center w-1/12 bg-teal-300 text-white font-bold py-1 px-2 rounded-full hover:bg-teal-400"  %>
    </div>
        <% unless @lendInfos.empty? %>
        <div>
            <h1 class="text-center mb-4 text-4xl font-extrabold leading-none tracking-tight text-gray-900 md:text-5xl lg:text-6xl dark:text-white">貸し一覧 <%= @lendInfos.count %>件</h1>
        </div>
        <div class="bg-neutral-100 w-full mx-auto rounded-xl grid grid-cols-3 gap-5 p-7">
            <% @lendInfos.each do |lendInfo| %>
            <div class="bg-white rounded-xl border">
                <div class="flex grid gap-x-2">
                    <div>借入者: <%= lendInfo["lend"].borrow_user.name %></div>
                    <div>
                        <% if lendInfo["lend"].approval_status == 1 %>
                        <span class="bg-green-100 text-green-800 text-xs font-medium me-2 px-2.5 py-0.5 rounded dark:bg-gray-700 dark:text-green-400 border border-green-400">承認済み</span>
                        <% else %>
                        <span class="bg-red-100 text-red-800 text-xs font-medium me-2 px-2.5 py-0.5 rounded dark:bg-gray-700 dark:text-red-400 border border-red-400">未承認</span>
                        <% end %>
                    </div>
                </div>
                <div class="">貸付金額:<%= lendInfo["lend"].amount %>円</div>
                <% if lendInfo["balance"] > 0 %>
                <div class="">返済残高: <%= lendInfo["balance"] %>円</div>
                <% else %>
                <div>
                    <span class="bg-green-100 text-green-800 text-xs font-medium me-2 px-2.5 py-0.5 rounded dark:bg-gray-700 dark:text-green-400 border border-green-400">返済完了</span>
                </div>
                <% end %>
                <div class="">コメント: <%= lendInfo["lend"].comment %></div>
                <div class="">返却期限: <%= l lendInfo["lend"].limit_on %></div>
                <%= link_to "詳細", lend_path(lendInfo["lend"]), class: "bg-teal-300 hover:bg-teal-400 text-white font-bold py-1 px-2 rounded-full" %>
                <%= link_to lend_path(lendInfo["lend"]), method: :delete, data: { turbo_method: :delete, turbo_confirm: "本当に削除しますか？" }, class: "bg-rose-300 hover:bg-rose-400 text-white font-bold py-1 px-2 rounded-full" do %>
                    <span class="disabled:hidden">削除</span>
                <% end %>
            </div>
            <% end %>
        </div>
        <% end %>
</div>