<div class="flex flex-col w-full">
    <% if !@borrowInfos.empty? %>
    <div>
        <h1 class="text-center mb-4 text-4xl font-extrabold leading-none tracking-tight text-gray-900 md:text-5xl lg:text-6xl">借り一覧</h1>
    </div>
    <div class="bg-neutral-100 w-full mx-auto rounded-xl grid grid-cols-3 gap-5 p-7">
        <% @borrowInfos.each do |borrowInfo| %>
         <% if borrowInfo["borrow"].approval_status == 1 %>
         <div class="bg-white shadow-xl border border-black rounded-xl grid grid-cols-2">
             <div class="grid gap-y-3 mt-2">
                <div>
                    <span class="bg-blue-500 text-white text-center text-xs mx-2.5 py-1 px-3.5 rounded-full">返済者</span>
                    <span class="mx-1"><%= borrowInfo["borrow"].lend_user.name %></span>
                </div>
                <div>
                    <span class="bg-blue-500 text-white text-center text-xs mx-2.5 py-1 px-2 rounded-full">借入金額</span>
                    <span class="mx-1"><%= borrowInfo["borrow"].amount %>円</span>
                </div>
                <% if borrowInfo["balance"] > 0 %>
                <div>
                    <span class="bg-blue-500 text-white text-center text-xs mx-2.5 py-1 px-2 rounded-full">返済残高</span>
                    <span class="mx-1"><%= borrowInfo["balance"] %>円</span>
                </div>
                <% else %>
                <div>
                  <span class="bg-green-100 text-green-800 text-xs font-medium me-2 px-2.5 py-0.5 rounded dark:bg-gray-700 dark:text-green-400 border border-green-400">返済完了</span>
                </div>
                <% end %>
                <div>
                    <span class="bg-blue-500 text-white text-center text-xs mx-2.5 py-1 px-3.5 rounded-full">コメント</span>
                    <span class="mx-1"><%= borrowInfo["borrow"].comment %></span>
                </div>
                <div>
                    <span class="bg-blue-500 text-white text-center text-xs mx-2.5 py-1 px-2 rounded-full">返却期限</span>
                    <span class="mx-1"><%= l borrowInfo["borrow"].limit_on %></span>
                </div>
                <div class="mb-2">
                    <%= link_to '詳細', borrow_path(borrowInfo["borrow"]), class: "text-center bg-teal-300 hover:bg-teal-400 text-white ml-32 py-1 px-2 rounded-full w-3/12" %>
                </div>
             </div>
              <div class="relative group">
                <% if borrowInfo["borrow"].expired? &&  borrowInfo["balance"] != 0 %>
                    <span class="rounded bg-black px-2 py-1 text-white absolute -top-2 left-5 before:absolute before:left-5 before:top-full before:border-4 before:border-transparent before:border-t-black opacity-0 group-hover:opacity-100 transition pointer-events-none">
                        噛み殺すぞ
                    </span>
                   <%= image_tag "tiger.png", alt: "怖いトラ",class: "w-11/12 rounded-full object-contain mt-5" %>
                <% elsif borrowInfo["borrow"].is_warning_days? && borrowInfo["balance"] != 0 %>
                    <span class="rounded bg-black px-2 py-1 text-white absolute -top-2 left-5 before:absolute before:left-5 before:top-full before:border-4 before:border-transparent before:border-t-black opacity-0 group-hover:opacity-100 transition pointer-events-none">
                        まだかにゃ？
                    </span>
                   <%= image_tag "catToritate.png", alt: "取り立て猫", class: "w-11/12 rounded-full object-contain mt-5" %>
                <% else %>
                    <span class="rounded bg-black px-2 py-1 text-white absolute -top-2 left-5 before:absolute before:left-5 before:top-full before:border-4 before:border-transparent before:border-t-black opacity-0 group-hover:opacity-100 transition pointer-events-none">
                        にゃ~
                    </span>
                    <%= image_tag "cat.png", alt: "かわいい猫", class: "w-11/12 rounded-full object-contain mt-5" %>
                <% end %>
             </div>
         </div>
        <% end %>
       <% end %>
    </div>
    <% end %>
    </div>
